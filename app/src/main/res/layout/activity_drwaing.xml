<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DrawingActivity">

    <org.mab.playground.customviews.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/red_color"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#ff0000"
        app:layout_constraintStart_toStartOf="@+id/drawing_view"
        app:layout_constraintTop_toTopOf="@+id/drawing_view" />

    <Button
        android:id="@+id/green_color"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00ff00"
        app:layout_constraintStart_toEndOf="@+id/red_color"
        app:layout_constraintTop_toTopOf="@+id/drawing_view" />

    <Button
        android:id="@+id/blue_color"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#0000ff"
        app:layout_constraintStart_toEndOf="@+id/green_color"
        app:layout_constraintTop_toTopOf="@+id/drawing_view" />

    <Button
        android:id="@+id/undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="undo"
        app:layout_constraintEnd_toEndOf="@+id/drawing_view"
        app:layout_constraintTop_toTopOf="@+id/drawing_view" />
</android.support.constraint.ConstraintLayout>